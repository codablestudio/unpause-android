<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        tools:ignore="SmallSp,ContentDescription">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/anchor_layout_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/anchor_img_arriving"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@id/anchor_layout_date_arrived_at"
                    android:layout_alignBottom="@+id/anchor_layout_date_arrived_at"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/launcher" />

            <RelativeLayout
                    android:id="@+id/anchor_layout_date_arrived_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/anchor_img_arriving">

                <ImageView
                        android:id="@+id/anchor_img_calendar_arrived_at"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/calendar_75x75_black" />

                <TextView
                        android:id="@+id/text_arrived_at_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/anchor_img_calendar_arrived_at"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:text="20.02.2020." />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/anchor_layout_time_arrived_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/anchor_layout_date_arrived_at">

                <ImageView
                        android:id="@+id/anchor_img_time_arrived_at"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/time_75x75_black" />

                <TextView
                        android:id="@+id/text_arrived_at_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/anchor_img_time_arrived_at"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:text="20.02.2020." />

            </RelativeLayout>

        </RelativeLayout>

        <View
                android:id="@+id/separator1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/anchor_layout_top"
                android:layout_alignStart="@id/anchor_layout_top"
                android:layout_alignEnd="@id/anchor_layout_top"
                android:background="@color/textColorDark" />


        <RelativeLayout
                android:id="@+id/anchor_layout_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator1"
                android:layout_alignStart="@id/anchor_layout_top"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

            <TextView
                    android:id="@+id/anchor_text_job_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/job_description"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/text_job_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/anchor_text_job_description"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    tools:text="Fixing some constraints on HomeViewController. Making UI of ShiftViewController more inutitive." />

        </RelativeLayout>

        <View
                android:id="@+id/separator2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/anchor_layout_middle"
                android:layout_alignStart="@id/anchor_layout_middle"
                android:layout_alignEnd="@id/anchor_layout_middle"
                android:layout_marginTop="10dp"
                android:background="@color/textColorDark" />

        <RelativeLayout
                android:id="@+id/anchor_layout_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator2"
                android:layout_alignStart="@id/anchor_layout_middle"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/anchor_img_leaving"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@id/anchor_layout_date_left_at"
                    android:layout_alignBottom="@+id/anchor_layout_date_left_at"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/unpause_white_logo_back_75x75" />

            <RelativeLayout
                    android:id="@+id/anchor_layout_date_left_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/anchor_img_leaving">

                <ImageView
                        android:id="@+id/anchor_img_calendar_left_at"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/calendar_75x75_black" />

                <TextView
                        android:id="@+id/text_left_at_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/anchor_img_calendar_left_at"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:text="20.02.2020." />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/anchor_layout_time_left_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/anchor_layout_date_left_at">

                <ImageView
                        android:id="@+id/anchor_img_time_left_at"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/time_75x75_black" />

                <TextView
                        android:id="@+id/text_left_at_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/anchor_img_time_left_at"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:text="20.02.2020." />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/anchor_layout_time_left_at">

                <TextView
                        android:id="@+id/anchor_text_working_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/working_hours"
                        android:textSize="12sp" />

                <TextView
                        android:id="@+id/text_working_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/anchor_text_working_hours"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        tools:text="0 hours 9 minutes" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>