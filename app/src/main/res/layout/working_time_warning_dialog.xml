<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp">

    <TextView
        android:id="@+id/textView3"
        style="@style/Title24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adding_shift"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="@+id/workingTimeEditText"
        app:layout_constraintStart_toStartOf="@+id/workingTimeEditText"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        style="@style/Title20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="30dp"
        android:text="@string/you_arived_at"
        app:layout_constraintStart_toStartOf="@+id/workingTimeEditText"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/working_icn_dark"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/arrivedAtDateTextView"
        style="@style/Subtitle16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:text="17.08.2019." />

    <ImageView
        android:id="@+id/edit_arrived_at_date_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/arrivedAtDateTextView"
        app:layout_constraintTop_toTopOf="@+id/arrivedAtDateTextView" />

    <TextView
        android:id="@+id/arrivedAtTimeTextView"
        style="@style/Subtitle16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/arrivedAtDateTextView"
        app:layout_constraintTop_toBottomOf="@+id/arrivedAtDateTextView"
        tools:text="8:00" />

    <ImageView
        android:id="@+id/edit_arrived_at_time_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/arrivedAtTimeTextView"
        app:layout_constraintTop_toTopOf="@+id/arrivedAtTimeTextView" />

    <TextView
        android:id="@+id/textView5"
        style="@style/Title20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:text="@string/you_are_leaving_at"
        app:layout_constraintStart_toStartOf="@+id/workingTimeEditText"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/walking_icn_dark"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/activeExitDateTextView"
        style="@style/Subtitle16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        tools:text="17.08.2019." />

    <ImageView
        android:id="@+id/edit_exit_at_date_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/activeExitDateTextView"
        app:layout_constraintTop_toTopOf="@+id/activeExitDateTextView" />

    <TextView
        android:id="@+id/activeExitTimeTextView"
        style="@style/Subtitle16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@id/activeExitDateTextView"
        tools:text="8:00" />

    <ImageView
        android:id="@+id/edit_exit_at_time_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/activeExitTimeTextView"
        app:layout_constraintTop_toTopOf="@+id/activeExitTimeTextView" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="20dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="@+id/workingTimeEditText"
        app:layout_constraintStart_toStartOf="@+id/workingTimeEditText"
        app:layout_constraintTop_toBottomOf="@id/activeExitTimeTextView" />

    <TextView
        android:id="@+id/workingTimeEditText"
        style="@style/Title20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        tools:text="You have been working for 8 hours, would you like to continue?" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:text="@string/cancel"
        android:textSize="16sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_working_time_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workingTimeEditText" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_working_time_dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/continue_text"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="@+id/workingTimeEditText"
        app:layout_constraintStart_toStartOf="@+id/guideline_working_time_dialog"
        app:layout_constraintTop_toTopOf="@+id/cancelButton" />

</androidx.constraintlayout.widget.ConstraintLayout>