<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="top|center"
tools:context=".screens.activity.emailVerification.EmailVerificationActivity">
<com.airbnb.lottie.LottieAnimationView
    android:id="@+id/anim_email_sent"
    android:layout_width="250dp"
    android:layout_height="250dp"
    app:lottie_fileName="email_sent_animation.json"
    app:lottie_loop="true"
    android:layout_marginBottom="20dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    style="@style/Title20"
    android:text="@string/email_sent_to"/>

<TextView
    android:id="@+id/text_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    style="@style/Title24"
    tools:text="lovro.ludvig@gmail.com"
    android:textColor="@color/accent"
    android:layout_marginBottom="20dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    style="@style/Body16"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:text="@string/email_confirmation_continue"/>

<com.airbnb.lottie.LottieAnimationView
    android:id="@+id/emailConfirmedAnimation"
    android:layout_marginTop="40dp"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:lottie_fileName="email_confirmed_animation.json"
    app:lottie_loop="false"/>

</LinearLayout>